{% extends 'base.html.twig' %}
{% block body %}
	<style>
		.card img {
			width: 100%;
			height: 15rem;
			object-fit: cover;
		}
	</style>
	<div class="container">
		<div class="row mb-5">
			<div class="col">
				<div class="jumbotron jumbotron-fluid text-center d-flex align-items-center" style="height:500px ; background-image: url('https://pic.clubic.com/v1/images/1951242/raw.webp?fit=max&width=1200&hash=cb6802a40b0ebf5850a7f459087efa94a3541016'); background-size: cover;">
					<div class="container">
						<h1 class="display-4 text-light fw-bold" data-aos="fade-left">Bienvenue sur notre blog PC</h1>
						<p class="lead fw-bold" data-aos="fade-up">Découvrez les dernières actualités et conseils sur les PC.</p>
						<a href="#dernierArticle" data-aos="fade-up" class="btn btn-success btn-md opacity-50">Voir les articles</a>
					</div>
				</div>
			</div>
		</div>
		<hr>
		<div class="row" id="dernierArticle">
			<h2>Dernier articles</h2>
			{% for article in articles %}
				<div class="col mb-5">
					<div class=" shadow card" style="width: 16rem;" data-aos="{{ cycle(['fade-up', 'fade-down'], loop.index) }}">
						<p class="date">Ecrit le
							{{ article.createdAt | date("d/m/y")}}
							a
							{{ article.createdAt | date("h:i")}}</p>
						<img src="{{article.image}}" class="card-img-top" alt="{{ article.title }}"/>
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<a href="{{path('app_show', {'id':article.id})}}" class="btn btn-sm btn-success card-text">En savoir plus</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row mb-5 text-center" data-aos="fade-up">
			<div class="col">
				<a href="{{path('app_articles')}}" class="btn btn-lg btn-success">Voire toutes les articles</a>
			</div>
		</div>
	</div>
{% endblock %}
