{% extends '@EasyAdmin/page/content.html.twig' %}

{% block body_id 'dashboard' %}

{% block main %}
    <h1>Bienvenue sur le Tableau de Bord</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-bar"></i> Statistiques</h5>
                    <p class="card-text">Nombre total d'utilisateurs : {{ totalUsers }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-bar"></i> Statistiques</h5>
                    <p class="card-text">Nombre total d'artcles : {{ totalArticles }}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-line"></i> Graphique à Barres</h5>
                    <canvas id="myBarChart"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Récupérez les données du service Symfony
        const chartData = {{ chartDataService.getChartData()|json_encode|raw }};

        // Créez le graphique à l'aide de la bibliothèque de graphiques (par exemple, Chart.js)
        const ctx = document.getElementById('myBarChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Données de l\'exemple',
                    data: chartData.data,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)', // Couleur de fond
                    borderColor: 'rgba(54, 162, 235, 1)', // Couleur de la bordure
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
