{% extends 'base.html.twig' %}


{% block title %}Liste des Catégories
{% endblock %}


{% block body %}


	<div class="container-fluid">
		<div class="row py-3 my-5 bg-success text-light">
			<div class="col text-center ">
				<h1 class="" data-aos="fade-up">Liste des Catégories</h1>
			</div>
		</div>
	</div>

	<div class="container">


		<div class="row">
			{% for category in categories %}
				<div class="col-md-4 mb-4">
					<div class="card " data-aos="fade-up">
						<a href="{{path('app_category_articles', {'id': category.id})}}"><img src="{{ category.image }}" class="card-img-top" alt="{{ category.name }}"></a>
						<div class="card-body">
							<h5 class="card-title">{{ category.name }}</h5>
							<p class="card-text">{{ category.description }}</p>
							<a href="{{path('app_category_articles', {'id': category.id})}}" id="replay" class="btn btn-success">
								<span>Voir les articles</span>
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
