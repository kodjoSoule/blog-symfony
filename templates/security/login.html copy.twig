{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block header %}{% endblock %}
{% block body %}
	<style>
		.image-container {
			height: 100vh;
			width: 100%;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			background-color: #CCC;
		}
		.form-container {
			background-color: #CCC;

		}
		.image-container img {
			width: 100%;
			height: 50vh;
			object-fit: cover;
		}
	</style>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6  p-5 form-container">
				<div class="card">
					<div class="card-body">

						<h1 class="h3 mb-3 font-weight-normal text-center text-primary">Connexion</h1>
						<p class="form-text text-muted mb-2">Entrer votre email et le mot de passe</p>
						<form method="post">

							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									Vous êtes connecté en tant que
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Déconnexion</a>
								</div>
							{% endif %}

							<div class="form-group mb-3">
								<label for="inputEmail" class="form-label">Adresse email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>

							<div class="form-group mb-3">
								<label for="inputPassword" class="form-label">Mot de passe</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<div class="form-row mb-3 d-flex flex-wrap-reverse justify-content-between">
								<a class="text-secondary" href="{{path('app_home')}}">Mot de passe oublié ?</a>
								<button class="btn btn-md btn-primary " type="submit">
									Connexion
								</button>
							</div>
							<div class="row">
								<div class="col">
									<div class="d-grid gap-2">
										<button class="btn btn-block btn-success">
											Retour a la page d'accueil
										</button>
									</div>
								</div>

							</div>
						</form>
					</div>
				</div>
				{#  #}

			</div>
			<div class="col d-none d-lg-block image-container">
				<div>
					<h2>Bienvenue dans le blog HK
					</h2>
					<span>
						Toutes les informations high tech
					</span>
					<img src="https://ats.org/wp-content/uploads/2020/04/Index-High-Tech-Future.jpg" alt=" screenshot image "/>
				</div>
				<div>
					<p>
						Lorem ipsum dolor sit amet consectetur, adipisicing elit. Fuga quasi quidem necessitatibus soluta deserunt tempora quisquam. Aperiam possimus, deleniti delectus, quos modi voluptatem quibusdam eligendi dolores maxime similique quam odio?

					</p>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
{% block footer %}{% endblock %}


